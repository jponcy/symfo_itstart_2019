{% extends 'base.html.twig' %}

{% block body %}
<h1>Liste des auteurs</h1>

<a href="{{ path('app_author_create') }}">Ajouter un auteur.</a>

{% if entities %}
<table class="table">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Surnom</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for e in entities %}
    <tr>
      <td><a href="{{ path('app_author_show', {id: e.id}) }}">{{ e.firstname|capitalize }} {{ e.lastname|upper }}</a></td>
      <td>{{ e.surname }}</td>
      <td>
      <div class="btn-group " role="group">
        <a class="btn btn-primary" href="{{ path('app_author_show', {id: e.id}) }}">Voir</a>
        <a class="btn btn-primary" href="{{ path('app_author_edit', {id: e.id}) }}">Modifier</a>
        <a class="btn btn-danger" href="{{ path('app_author_delete', {id: e.id}) }}">Supprimer</a>
        </div>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{% else %}
<p class="text text-warning">Aucun auteur disponible.</p>
{% endif %}
{% endblock %}
